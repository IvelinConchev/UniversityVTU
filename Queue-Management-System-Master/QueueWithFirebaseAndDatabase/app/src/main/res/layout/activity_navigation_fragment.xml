<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:context=".fragments.NavigationFragment"
    style="?android:attr/buttonBarStyle"
    android:background="@color/purple_200">

    <Button
        android:id="@+id/navFacilities"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_baseline_home_work_24"
        android:drawablePadding="5dp"
        android:text="Институции"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/navReservations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_baseline_receipt_long_24"
        android:text="Резервация"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/navProfile"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/user"
        android:drawablePadding="5dp"
        android:elevation="0dp"
        android:text="Профил"
        android:textSize="12sp"
        android:textStyle="bold"/>

</LinearLayout>